name: Atualizar Dados BI Orcamento

on:
  schedule:
    - cron: '0 8 * * *'
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Instalar R
        uses: r-lib/actions/setup-r@v2

      - name: Instalar Pacotes R
        run: |
          Rscript -e 'install.packages(c("readxl", "dplyr", "openxlsx", "lubridate"))'

      - name: Executar Script R
        run: Rscript orcamento/atualiza_base.R

      - name: Salvar Arquivo Excel
        run: |
          git config --global user.name "Robo-BI"
          git config --global user.email "actions@github.com"
          git add orcamento/Execucao_Orcamentaria_Atualizada.xlsx
          git commit -m "Dados atualizados em Excel" || echo "Sem alterações"
          git push
